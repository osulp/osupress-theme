name =  Ponderosa
description = Ponderosa is a subtheme of the Doug Fir theme build for the 2018 OSU Press site rebuild.
package = OSU
version = 7.x-3.7
core = 7.x
base theme = doug_fir

stylesheets[all][] = bootstrap/css/bootstrap.css
stylesheets[all][] = css/less/main.css


scripts[] = js/jquery.mobile.custom.min.js
scripts[] = js/bootstrap.min.js
scripts[] = js/menus.js
scripts[] = js/variants.js  // this file is loaded through theme-settings.php

; Default regions
regions[page_top]           = Page Top
regions[page_bottom]        = Page Bottom
regions[top]                = Top
;regions[header]             = Header
regions[nav]                = Main Menu
regions[help]               = Help

; Optional regions
regions[full_top]           = Full width below the main menu
regions[features]           = Features
regions[pre_content]        = Pre content
regions[content]            = Content
regions[post_content]       = Post content
; regions[sidebar_first]      = Primary Sidebar
; regions[sidebar_second]     = Secondary Sidebar
regions[pre_footer]         = Full width above the footer
regions[footer]             = Footer
regions[highlighted]        = Highlighted
regions[main_first]         = Main Column1
regions[main_second]        = Main Column2
regions[main_third]         = Main Column3
;regions[footer_firstcolumn] = Footer first column
;regions[footer_secondcolumn] = Footer second column
;regions[footer_thirdcolumn]  = Footer third column
;regions[footer_fourthcolumn] = Footer fourth column

features[] = logo
features[] = name
features[] = favicon
features[] = main_menu
features[] = secondary_menu

; Theme variants
default_variant     = 'doug_fir'
variants[doug_fir]  = 'Doug Fir'
variants[pine]      = 'Pine'
variants[classic]   = 'OSU Standard'
variants[marine]    = 'Marine'
variants[science]   = 'Science'
variants[pharmacy]  = 'Orange'
variants[agsci]     = 'Agriculture'

settings[responsive] = 1
settings[hide_breadcrumbs] = 0
settings[hide_book_nav] = 0
settings[hide_terms] = 0

plugins[panels][layouts] = layouts
